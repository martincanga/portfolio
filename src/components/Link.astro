---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("px-2 py-0.5 rounded-md inline-block decoration-black/15 dark:decoration-white/30 transition-colors duration-300 ease-in-out hover:text-black hover:dark:text-white hover:bg-black/5 hover:dark:bg-white/15")}
  {...rest}>
  <slot/>
</a>
